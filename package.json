{
  "name": "obsidian-comments",
  "version": "1.0.5",
  "description": "Collaborative Markdown editor with real-time editing, commenting, UI improvements and title deduplication",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "install-all": "npm install && npm run install:backend && npm run install:frontend && npm run install:hocuspocus",
    "install:backend": "cd packages/backend && npm install",
    "install:frontend": "cd packages/frontend && npm install",
    "install:hocuspocus": "cd packages/hocuspocus && npm install",
    "dev": "docker-compose -f docker-compose.local.yml up",
    "dev:old": "docker-compose up --build",
    "dev:native": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:hocuspocus\"",
    "dev:backend": "cd packages/backend && npm run dev",
    "dev:frontend": "cd packages/frontend && npm run dev",
    "dev:hocuspocus": "cd packages/hocuspocus && npm run dev",
    "build": "npm run build:backend && npm run build:frontend && npm run build:hocuspocus",
    "build:docker": "docker-compose build",
    "build:backend": "cd packages/backend && npm run build",
    "build:frontend": "cd packages/frontend && npm run build",
    "build:hocuspocus": "cd packages/hocuspocus && npm run build",
    "test": "npm run test:backend && npm run test:frontend && npm run test:hocuspocus",
    "test:ci": "npm run test:ci:backend && npm run test:ci:frontend && npm run test:ci:hocuspocus",
    "test:ci:backend": "cd packages/backend && npm run test:ci",
    "test:ci:frontend": "cd packages/frontend && npm run test:ci",
    "test:ci:hocuspocus": "cd packages/hocuspocus && npm run test:ci",
    "test:tdd": "npm run test:tdd:backend",
    "test:tdd:backend": "cd packages/backend && npm run test:tdd",
    "test:backend": "cd packages/backend && npm run test:unit",
    "test:backend:integration": "cd packages/backend && npm run test:integration",
    "test:frontend": "cd packages/frontend && npm test",
    "test:hocuspocus": "cd packages/hocuspocus && npm test",
    "test:watch": "npm run test:watch --workspaces",
    "test:coverage": "npm run test:coverage --workspaces",
    "test:unit": "jest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:collaboration": "playwright test tests/e2e/collaboration-tdd.spec.js",
    "test:production": "npx playwright test --config=playwright.production.config.js",
    "lint": "npm run lint:backend && npm run lint:frontend && npm run lint:hocuspocus",
    "lint:backend": "cd packages/backend && npm run lint",
    "lint:frontend": "cd packages/frontend && npm run lint",
    "lint:hocuspocus": "cd packages/hocuspocus && npm run lint",
    "typecheck": "npm run typecheck --workspaces",
    "prisma:generate": "cd packages/backend && npx prisma generate && cd ../hocuspocus && npx prisma generate",
    "prisma:migrate": "cd packages/backend && npx prisma migrate dev",
    "prisma:deploy": "cd packages/backend && npx prisma migrate deploy",
    "build:local": "VITE_API_URL=http://localhost:3001 VITE_WS_URL=ws://localhost:3001/ws npm run build --prefix packages/frontend",
    "build:staging": "VITE_API_URL=https://staging.obsidiancomments.serverado.app VITE_WS_URL=wss://staging.obsidiancomments.serverado.app/ws npm run build --prefix packages/frontend",
    "build:production": "VITE_API_URL=https://obsidiancomments.serverado.app VITE_WS_URL=wss://obsidiancomments.serverado.app/ws npm run build --prefix packages/frontend",
    "deploy": "./deploy-native.sh",
    "deploy:github": "./deploy-github.sh",
    "deploy:local": "./deploy-local-build.sh",
    "deploy:production": "docker-compose -f docker-compose.production.yml up -d --build",
    "deploy:stop": "docker-compose -f docker-compose.production.yml down",
    "check:pre-deploy": "node scripts/pre-deploy-check.js",
    "start:local": "./test-local-production.sh"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@types/node": "^20.0.0",
    "concurrently": "^8.2.2",
    "js-yaml": "^4.1.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "playwright": "^1.54.2"
  }
}
