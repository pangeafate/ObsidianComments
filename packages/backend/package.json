    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/joi": "^17.2.2",
    "@types/node": "^20.0.0",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.44.0",
    "jest": "^29.5.0",
    "prisma": "^5.0.0",
