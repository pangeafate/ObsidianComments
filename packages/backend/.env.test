# Backend Test Environment Variables
NODE_ENV=test

# Test Database Configuration
DATABASE_URL=postgresql://postgres:test_password@localhost:5432/obsidian_comments_test

# Test Redis Configuration  
REDIS_URL=redis://localhost:6379/1

# Test-specific configurations
JWT_SECRET=test-jwt-secret-key-for-testing-only
CORS_ORIGIN=http://localhost:3000,http://localhost:5173,https://obsidiancomments.serverado.app
FRONTEND_URL=http://localhost:5173

# Rate limiting (more lenient for testing)
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=10000

# Port configuration
PORT=8081

# Mock external services for unit tests
MOCK_EXTERNAL_SERVICES=true

# Disable logging in tests
LOG_LEVEL=error
DISABLE_LOGS=true